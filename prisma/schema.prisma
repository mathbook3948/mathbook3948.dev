generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  adminIdx Int    @id @default(autoincrement()) @map("admin_idx")
  id       String @db.VarChar(255)
  name     String @db.VarChar(255)
  password String @db.VarChar(255)

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")
  isDeleted Boolean   @default(false) @map("is_deleted")

  @@map("t_admin")
}

model Category {
  categoryIdx Int     @id @default(autoincrement()) @map("category_idx")
  name        String  @db.VarChar()
  sortOrder   Int     @default(0) @map("sort_order")
  isPublic    Boolean @default(true)

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")
  isDeleted Boolean   @default(false) @map("is_deleted")

  posts     Post[]
  PostDraft PostDraft[]

  @@map("t_category")
}

model Post {
  postIdx     Int     @id @default(autoincrement()) @map("post_idx")
  categoryIdx Int     @map("category_idx")
  title       String  @db.VarChar()
  content     String  @db.VarChar()
  views       Int     @default(0)
  thumbnail   String? @db.VarChar()

  isPublic Boolean @default(true) @map("is_public")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")
  isDeleted Boolean   @default(false) @map("is_deleted")

  category Category @relation(fields: [categoryIdx], references: [categoryIdx])

  @@map("t_post")
}

model PostDraft {
  postDraftIdx Int     @id @default(autoincrement()) @map("post_draft_idx")
  categoryIdx  Int     @map("category_idx")
  title        String  @db.VarChar()
  content      String  @db.VarChar()
  thumbnail    String? @db.VarChar()

  isPublic Boolean @default(true) @map("is_public")

  createdAt DateTime @default(now()) @map("created_at")

  category Category? @relation(fields: [categoryIdx], references: [categoryIdx])

  @@map("t_post_draft")
}

model Config {
  key   String @id @db.VarChar()
  value String @db.VarChar()

  @@map("t_config")
}
